@model AttendanceMark.Models.Attendance
  
@{
    ViewBag.Title = "Home Page";
}


@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { id = "myform" }))
{
    <div class="form-horizontal">

        <hr />
       
        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Date, new  { htmlAttributes = new {  @class = "form-control", Id="dates", Name="markdate" } })
         
            </div>
        </div>


    </div>

    <table class="table" id="mytable" width="100%">
        <tr>
            <th>Mark</th>
            <th>Student Id</th>
            <th>Name</th>
        </tr>

        @foreach (var item in @ViewBag.studentslist)
        {
	    <tr>
           
            <td><input type="checkbox" name="StudentId" value="@item.Id" /></td>
            <td>@item.Id</td>
            <td>@item.Name</td>
          
        </tr>	 
        }

        <tr>
            <td>
          
                <button type="submit" value="Create" class="btn btn-success">Mark</button>
           
                </td>
        </tr>
    </table>
}  


